  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "bash ${localWorkspaceFolder}/.devcontainer/setup.sh",
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  "privileged": true,
  // "capAdd": ["SYS_PTRACE"],
  "mounts": [
    {
      "source": "${localEnv:HOME}/Desktop/dockerVolumn",
      "target": "/root/Desktop/dockerVolumn",
      "type": "volume"
    }
  ],
  "runArgs": [
    // "--cap-add=SYS_PTRACE",
    // "--security-opt",
    // "seccomp=unconfined",
    "--name",
    "--net=host",
    "--shm-size=4G",
    "--ulimit",
    "memlock=-1:-1",
    // "${localEnv:USER}-tvm",
    "yyx-gpu-puzzle",
